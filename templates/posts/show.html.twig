{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ post.message }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ post.createdAt ? post.createdAt|date('d/m/Y à H:i:s') : '' }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('posts_index') }}" class="btn btn-success">Retour à la liste</a>

    <a href="{{ path('posts_edit', {'id': post.id}) }}" class="btn btn-secondary">Éditer</a>

    {{ include('posts/_delete_form.html.twig') }}
{% endblock %}
